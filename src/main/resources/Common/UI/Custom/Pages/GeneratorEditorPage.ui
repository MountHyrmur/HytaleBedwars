$C = "../Common.ui";

$C.@PageOverlay {}

$C.@DecoratedContainer {
  Anchor: (Width: 740, Height: 480);

  #Title {
    Label {
      Text: "Edit generator";
      Style: (
        ...$C.@TitleStyle,
        HorizontalAlignment: Center,
      );
      Padding: (Horizontal: 19);
    }
  }

  #Content {
    LayoutMode: Top;
    Padding: (Horizontal: 10);

    Group #BlockPattern {
      LayoutMode: Top;
      Anchor: (Bottom: 8);

      Label {
        Text: %server.customUI.generatorEditor.generatorName;
        Anchor: (Bottom: 4);
        Style: $C.@DefaultLabelStyle;
      }

      $C.@TextField #GeneratorName {
        @Anchor = (Left: 0);
        MaxLength: 512;
        PlaceholderText: "Diamond";
      }
    }

    Group {
      LayoutMode: Left;
      Anchor: (Top: 15);

      $C.@TextButton #ActivateGenerator {
        Text: %server.customUI.generatorEditor.button.activateGenerator;
        FlexWeight: 1;
      }

      Group {
        Anchor: (Width: 5);
      }

      $C.@SecondaryTextButton #DeactivateGenerator {
        Text: %server.customUI.generatorEditor.button.deactivateGenerator;
        FlexWeight: 1;
      }
    }
  }
}

$C.@BackButton {}